step "fetch-appinsights-appid-and-api-key" {
    name = "Fetch AppInsights AppId and API Key"

    action {
        action_type = "Octopus.Script"
        properties = {
            Octopus.Action.Script.ScriptBody = <<-EOT
                Write-Host "Resource Group Name: #{ResourceGroupName}"
                Write-Host "AppInsights Name: #{AppInsightsName}"
                
                $appInsights = Get-AzApplicationInsights -ResourceGroupName #{ResourceGroupName} -Name #{AppInsightsName}
                
                $appId = $appInsights.AppId
                
                $instrumentationKey = (Get-AzApplicationInsights -ResourceGroupName #{ResourceGroupName} -Name #{AppInsightsName}).InstrumentationKey
                
                $apiKey = Get-AzApplicationInsightsApiKey -ResourceGroupName #{ResourceGroupName} -Name #{AppInsightsName}
                 
                Write-Host "Instrumentation Key: $instrumentationKey"
                 
                Set-OctopusVariable -Name "appInsightsInstrumentationKey" -Value $instrumentationKey
                Set-OctopusVariable -Name "appInsightsAPIKey" -Value $apiKey
                Set-OctopusVariable -Name "appInsightsAppId" -Value $appId
                
                
                EOT
            Octopus.Action.Script.ScriptSource = "Inline"
            Octopus.Action.Script.Syntax = "PowerShell"
        }
        worker_pool = "hosted-windows"
    }
}

